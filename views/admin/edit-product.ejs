<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Task Title</label>
                <input type="text" name="taskname" id="title" value="<% if (editing) { %><%= product.taskname %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Creator</label>
                <input type="text" name="creator" id="imageUrl" value="<% if (editing) { %><%= product.creator %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Created At</label>
                <input type="Date" name="createdAt" id="price" step="0.01" value="<% if (editing) { %><%= product.createdAt %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">expire At</label>
                <input type="Date" name="expireAt" id="price" step="0.01" value="<% if (editing) { %><%= product.expireAt %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Duration in Ms</label>
                <input type="Number" name="duration" id="price" step="0.01" value="<% if (editing) { %><%= product.duration %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="taskdescription" id="description" rows="5"><% if (editing) { %><%= product.taskdescription %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
